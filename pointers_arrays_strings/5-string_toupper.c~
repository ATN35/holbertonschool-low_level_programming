#include "main.h"
#include <ctype.h>

/**
 * string_toupper - transforms all lowercase letters into uppercase letters
 * @s: an input string
 * Return: char pointer to converted string
 */
char *string_toupper(char *str)
{
	char *ptr = str;

	while (*ptr != '\0')
	{
		*ptr = toupper(*ptr);
		ptr++;
	}

	return (str);
}
